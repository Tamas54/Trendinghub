{
  "manifest_version": 3,
  "name": "TrendMaster Agent",
  "version": "1.0.0",
  "description": "Social Media Automation Assistant - Magyar nyelven",
  "author": "TrendMaster",
  
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "scripting",
    "notifications",
    "cookies"
  ],
  
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://*.railway.app/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*", "https://facebook.com/*"],
      "js": ["content/common.js", "content/facebook.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.instagram.com/*", "https://instagram.com/*"],
      "js": ["content/common.js", "content/instagram.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content/common.js", "content/twitter.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
